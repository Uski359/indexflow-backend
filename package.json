{
  "name": "@indexflow/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "migrate": "tsx scripts/runMigrations.ts",
    "test:watch": "vitest watch",
    "indexer:backfill:sepolia": "ts-node --esm -r tsconfig-paths/register src/indexer/backfill/sepolia.backfill.ts",
    "indexer:listener:sepolia": "ts-node --esm -r tsconfig-paths/register src/indexer/listener/sepolia.listener.ts",
    "indexer:backfill:polygon": "ts-node --esm -r tsconfig-paths/register src/indexer/backfill/polygon.backfill.ts",
    "indexer:listener:polygon": "ts-node --esm -r tsconfig-paths/register src/indexer/listener/polygon.listener.ts",
    "indexer:backfill:arbitrum": "ts-node --esm -r tsconfig-paths/register src/indexer/backfill/arbitrum.backfill.ts",
    "indexer:listener:arbitrum": "ts-node --esm -r tsconfig-paths/register src/indexer/listener/arbitrum.listener.ts",
    "indexer:backfill:base": "ts-node --esm -r tsconfig-paths/register src/indexer/backfill/base.backfill.ts",
    "indexer:listener:base": "ts-node --esm -r tsconfig-paths/register src/indexer/listener/base.listener.ts",
    "indexer:backfill:optimism": "ts-node --esm -r tsconfig-paths/register src/indexer/backfill/optimism.backfill.ts",
    "indexer:listener:optimism": "ts-node --esm -r tsconfig-paths/register src/indexer/listener/optimism.listener.ts",
    "indexer:listener:all": "run-p indexer:listener:sepolia indexer:listener:polygon indexer:listener:arbitrum indexer:listener:base indexer:listener:optimism",
    "indexer:backfill:core": "run-s indexer:backfill:sepolia",
    "indexer:backfill:all": "run-s indexer:backfill:sepolia indexer:backfill:polygon indexer:backfill:arbitrum indexer:backfill:base indexer:backfill:optimism",
    "indexer:multi:all": "npm run indexer:listener:all",
    "test:readiness": "node scripts/check-readiness.js"
  },
  "dependencies": {
    "@indexflow/config": "file:../packages/config",
    "@elastic/elasticsearch": "^8.12.0",
    "bottleneck": "^2.19.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.15.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "indexflow": "file:..",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^7.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pino": "^10.0.0",
    "pino-http": "^11.0.0",
    "uuid": "^9.0.1",
    "viem": "2.38.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.11.2",
    "@types/pino-http": "^6.1.0",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "pg-mem": "^3.0.5",
    "pino-pretty": "^10.2.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^3.15.0",
    "tsx": "^4.6.2",
    "typescript": "~5.3.3",
    "vitest": "^3.2.4"
  }
}
